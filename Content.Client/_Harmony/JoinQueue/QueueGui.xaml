<queue:QueueGui xmlns="https://spacestation14.io"
         xmlns:parallax="clr-namespace:Content.Client.Parallax"
         xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
         xmlns:queue="clr-namespace:Content.Client._Harmony.JoinQueue">
    <parallax:ParallaxControl Name="Background"
        ParallaxPrototype="TrainStation"
        SpeedX="5"
        SpeedY="20"
        ScaleX="3"
        ScaleY="3"/>
    <Control HorizontalAlignment="Center" VerticalAlignment="Center" Name="MainContainer">
        <PanelContainer StyleClasses="windowPanel" />
        <BoxContainer Orientation="Vertical" HorizontalExpand="True" MinSize="500 300">
            <BoxContainer Orientation="Horizontal">
                <Label Margin="8 0 0 0" Name="ServerName"
                    StyleClasses="LabelHeading" Align="Center" />
                <Label Margin="5 0 0 0" Text="{Loc 'queue-title'}"
                    StyleClasses="LabelHeading" VAlign="Center" />
                <Button Name="QuitButton" Text="{Loc 'queue-quit'}" Access="Public"
                    HorizontalAlignment="Right" HorizontalExpand="True" />
            </BoxContainer>
            <controls:HighDivider />
            <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
                <BoxContainer Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextureRect Name="Logo" Stretch="KeepCentered" Margin="20 0 0 0"/>
                </BoxContainer>
                <BoxContainer Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="50 20 20 20">
                    <BoxContainer Orientation="Vertical">
                        <BoxContainer Orientation="Vertical" VerticalExpand="True">
                            <Label Text="{Loc 'queue-position'}" Align="Center" />
                            <Label Name="QueuePosition" StyleClasses="LabelHeading" Align="Center" />
                        </BoxContainer>
                        <BoxContainer Orientation="Vertical" VerticalExpand="True" Margin="0 10 0 0">
                            <Label Text="{Loc 'queue-total'}" Align="Center" />
                            <Label Name="QueueTotal" StyleClasses="LabelHeading" Align="Center" />
                        </BoxContainer>
                    </BoxContainer>
                </BoxContainer>
            </BoxContainer>
        </BoxContainer>
    </Control>
</queue:QueueGui>
